<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/center_icon_margin"
        android:layout_marginTop="@dimen/center_icon_margin"
        android:background="@color/center_item_bg_color" >

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/center_icon_margin"
            android:layout_marginLeft="@dimen/center_icon_margin"
            android:layout_marginRight="@dimen/center_icon_margin"
            android:layout_marginTop="@dimen/center_icon_margin"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沧海月生"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/text_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号：xiaolong-sea"
                android:textColor="@color/app_gray_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@color/center_item_bg_color"
        android:padding="@dimen/center_icon_margin" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/center_icon_margin"
                android:minHeight="@dimen/center_item_icon_size"
                android:minWidth="@dimen/center_item_icon_size"
                android:src="@drawable/contact_list_selected" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/center_icon_margin"
                android:text="相册" 
                android:textSize="@dimen/center_item_textsize"
                />

 
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mysees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/photos"
        android:background="@color/center_item_bg_color"
        android:padding="@dimen/center_icon_margin" >

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/center_icon_margin"
            android:minHeight="@dimen/center_item_icon_size"
            android:minWidth="@dimen/center_item_icon_size"
            android:src="@drawable/contact_list_selected" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/center_icon_margin"
            android:text="看过的人"
            android:textSize="@dimen/center_item_textsize" />
    </LinearLayout>

</RelativeLayout>